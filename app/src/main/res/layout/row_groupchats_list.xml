<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#fff"
    app:contentPadding="3dp"
    android:layout_marginTop="1dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.blogspot.atifsoftwares.circularimageview.CircularImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic__group_white"
            android:id="@+id/groupIconIv">
        </com.blogspot.atifsoftwares.circularimageview.CircularImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/groupTitleTv"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_toEndOf="@+id/groupIconIv"
            android:text="Group Title"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#000"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/groupIconIv"
            android:layout_below="@+id/groupTitleTv"
            android:id="@+id/nameTv"
            android:layout_marginStart="4dp"
            android:text="Sender Name"
            android:textColor="#000"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/nameTv"
            android:layout_below="@+id/groupTitleTv"
            android:id="@+id/messageTv"
            android:singleLine="true"
            android:layout_marginStart="5dp"
            android:text="The message"
            android:textColor="#666262"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameTv"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:id="@+id/timeTv"
            android:singleLine="true"
            android:layout_marginStart="4dp"
            android:text="Time"></TextView>
    </RelativeLayout>

</androidx.cardview.widget.CardView>